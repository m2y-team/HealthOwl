    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/firstLayout">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Emergency ?" />

                <Switch
                    android:id="@+id/switchButton1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:padding="2dp">

                <TextView
                    android:text="Level of Pain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textLevelOfPain" />

                <SeekBar
                    style="@android:style/Widget.SeekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:max="10"
                    android:progress="3"
                    android:id="@+id/levelOfPain" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:padding="2dp">

                <TextView
                    android:text="Area of Pain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editAreaOfPain"
                    style="@style/Widget.AppCompat.AutoCompleteTextView"
                    android:hint="Enter Area of Pain" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:padding="2dp">

                <TextView
                    android:text="Department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4" />

                <RadioGroup
                    android:id="@+id/radiodepartments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/radioCardiology"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cardiology"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/radioDermatology"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dermatology" />

                    <RadioButton
                        android:id="@+id/radioInfectious"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Infectious" />

                    <RadioButton
                        android:id="@+id/radioPhysician"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Physician" />

                </RadioGroup>


            </TableRow>
        </TableLayout>

    </LinearLayout>

</ScrollView>
